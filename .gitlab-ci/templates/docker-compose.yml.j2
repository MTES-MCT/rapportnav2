version: "3.7"

services:
  app:
    image: "{{ docker_image_path_1 }}"
    container_name: rapportnav_backend
    env_file: ".env"
    environment:
      # profile is 'prod', 'int' or 'local'
      - SPRING_PROFILES_ACTIVE
      - ENV_DB_URL
      - JWT_SECURITY_KEY
      - MASTER_API_KEY
      - PROXY_HOST
      - PROXY_PORT
      - MONITORFISH_HOST
      - MONITORFISH_API_KEY
      - MONITORENV_HOST
      - SENTRY_DSN
      - SENTRY_SECU_HEADER_ENDPOINT
    ports:
      - 80:80
    # volumes:
    #  - "${RAPPORTNAV_LOGS_FOLDER}:/home/rapportnav/logs"
    depends_on:
      - db
    restart: always
    logging:
      driver: "json-file"
      options:
        max-size: "1024m"

  db:
    image: "{{ nexus_proxy }}/postgres:18.1-alpine"
    volumes:
      - db:/var/lib/postgresql/data
    restart: always
    ports:
      - "5432:5432"
    environment:
      POSTGRES_DB: {{ rapportnav_psql_db }}
      POSTGRES_USER: {{ rapportnav_psql_user }}
      POSTGRES_PASSWORD: {{ rapportnav_psql_pwd }}
    healthcheck:
      test: [ "CMD-SHELL", "pg_isready -U postgres" ]
      interval: 1s
      timeout: 1s
      retries: 30

volumes:
  db:
    name: rapportnavdb


