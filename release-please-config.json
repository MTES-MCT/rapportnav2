{
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "group-some-associated-services",
      "components": ["docker-container", "backend", "frontend"],
      "merge": true
    }
  ],
  "separate-pull-requests": false,
  "commit-search-depth": 50,
  "release-search-depth": 50,
  "always-link-local": true,
  "include-v-in-tag": true,
  "tag-separator": "@",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "draft": false,
  "prerelease": false,
  "pull-request-header": "ðŸ¤– Release created:",
  "pull-request-footer": "_release-please generated PR_",
  "packages": {
    ".": {
      "component": "docker-container",
      "release-type": "simple",
      "extra-files": [
        {
          "type": "yaml",
          "path": ".gitlab-ci.yml",
          "jsonpath": "$.variables.PROJECT_VERSION.value"
        }
      ]
    },
    "backend": {
      "component": "backend",
      "release-type": "simple",
      "extra-files": [
        {
          "type": "generic",
          "path": "backend/build.gradle.kts",
          "search": "version = \\\"[0-9]+\\.[0-9]+\\.[0-9]+\\\"",
          "replace": "version = \\\"{{version}}\\\"",
          "regex": true
        }
      ]
    },
    "frontend": {
      "component": "frontend",
      "release-type": "node"
    }
  },
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
