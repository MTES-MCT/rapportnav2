type Query {
  missions(userId: ID): [Mission]!
  mission(missionId: ID): Mission!
}

type Mission {
  id: ID!
  isClosed: Boolean!
  missionSource: String!
  startDateTimeUtc: String!
  endDateTimeUtc: String!
  actions: [Action]
}

enum MissionSource {
  MONITORENV
  MONITORFISH
  POSEIDON_CACEM
  POSEIDON_CNSP
  RAPPORTNAV
}

type Action {
  id: String
  startDateTimeUtc: String!
  endDateTimeUtc: String
  source: MissionSource!
  status: ActionStatusType!
  type: ActionType
  data: ActionData
}

union ActionData =
    FishActionData
  | EnvActionData
  | NavActionControl
  | NavActionStatus

#union NavActionData = ActionControl | ActionStatus

